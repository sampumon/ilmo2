<h2><%= t :listing_courses %></h2>

<table>
  <tr>
    <th><%= t :name %></th>
    <th><%= t :desc %></th>
    <th><%= t :parties %></th>
  </tr>

<% @courses.each do |course| %>
  <tr>
    <td><%= link_to course.name, course %></td>
    <td><%=h course.desc %></td>
    <td><%=h course.parties.count %></td>
  </tr>
<% end %>
</table>

<p><%= link_to t(:new_course), new_course_path %></p>

</p>

